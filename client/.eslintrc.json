{
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "sourceType": "module"
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [ "eslint:recommended", "airbnb"],
  "rules": {
    "import/extensions": 0,
    "no-console": 0,
    "no-multi-spaces": 0,
    "react/jsx-filename-extension": 0,
    "require-jsdoc": 0,
    "valid-jsdoc": 0
  },
  "overrides": [{
      "files": ["**/*.test.js"],
      "rules": {
          "no-undef": 0
      }
  }],
  "settings": {
      "react": {
          "version": "detect"
      }
  },
  "plugins": [
      "react",
      "react-hooks"
  ]
}